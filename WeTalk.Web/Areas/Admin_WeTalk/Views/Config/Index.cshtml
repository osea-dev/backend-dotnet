@model WeTalk.Web.ViewModels.Config.Index
@using Microsoft.AspNetCore.Mvc.Localization
@using WeTalk.Interfaces
@inject IHtmlLocalizer<LangResource> Localizer
@section HeadCss{
	<link href="~/css/plugins/datapicker/bootstrap-datetimepicker.css" rel="stylesheet" />
	<link href="@Url.Content("~/css/plugins/switchery/switchery.css")" rel="Stylesheet" type="text/css" />
}


<form asp-action="Index" enctype="multipart/form-data">
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right"></label>
								<div class="col-sm-8">
									@Model.Key
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">名片ID</label>
								<div class="col-sm-8">
									<input asp-for="Val" type="text" class="form-control" Required="true" placeholder="名片ID" />
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">是否同步刷新晒名片</label>
								<div class="col-sm-8">
									<input name="chk_refresh" value="1" type="checkbox" class="js-switch i-checks" />
								</div>
							</div>
							<div class="row">
								<div class="col-sm-8 ml-auto">
									<input asp-for="PubConfigid" type="hidden" />
									<button type="submit" class="btn btn-primary dictionaryadd dictionaryedit">保存信息</button>
								</div>
							</div>
						</div>

					</div>
				</div><!--end card-body-->
			</div><!--end card-->
		</div><!--end col-->
	</div><!--end row-->
</form>

@section Scripts{
	<!-- Required datatable js -->
	<script type="text/javascript" src="@Url.Content("/assets/js/plugins/datapicker/bootstrap-datetimepicker.min.js")"></script>
	<script src="@Url.Content("/assets/js/plugins/switchery/switchery.js")"></script>

	<script>
		@Html.Raw(ViewBag.ScriptStr)
		var switchery = new Switchery($(".js-switch")[0], {
			color: '#1AB394'
		});
		$(document).ready(function () {
			$('.datetimepicker').datetimepicker({
				//language: 'zh-CN',//显示中文
				forceParse: true,
				format: 'yyyy-mm-dd hh:ii:ss',//显示格式
				initialDate: new Date().Format("yyyy-MM-dd hh:mm:ss"),
				autoclose: true,//选中自动关闭
				todayBtn: true,//显示今日按钮*/
				minuteStep: 1
			});
		});
	</script>
}
