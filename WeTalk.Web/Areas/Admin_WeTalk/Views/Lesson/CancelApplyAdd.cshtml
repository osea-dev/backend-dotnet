@using WeTalk.Interfaces;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<LangResource> Localizer
@using WeTalk.Web.ViewModels.Lesson;
@model CancelApplyAdd
@section HeadCss{
	<link href="/assets/css/plugins/datapicker/bootstrap-datetimepicker.css" rel="stylesheet" />
	<link href="@Url.Content("/assets/css/plugins/switchery/switchery.css")" rel="Stylesheet" type="text/css" />
	<style>
		.col-sm-8{padding-top:7px;}
	</style>
}
<form asp-action="CancelApplyAdd" enctype="multipart/form-data">
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["学生姓名"]</label>
								<div class="col-sm-8">
									@Model.MenkeStudentName
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["学生电话"]</label>
								<div class="col-sm-8">
									@Model.MenkeStudentMobile
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["老师姓名"]</label>
								<div class="col-sm-8">
									@Model.MenkeTeacherName
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["老师电话"]</label>
								<div class="col-sm-8">
									@Model.MenkeTeacherMobile
								</div>
							</div>
							<div class="form-group row">
								<label for="example-number-input" class="col-sm-3 col-form-label text-right">@Localizer["拓课云课程"]</label>
								<div class="col-sm-8">
									@Model.MenkeCourseName
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["拓课云试听课节"]</label>
								<div class="col-sm-8">
									@Model.MenkeLessonName
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["房间号"]</label>
								<div class="col-sm-8">
									@Model.MenkeLiveSerial
								</div>
							</div>
							<div class="form-group row">
								<label for="example-number-input" class="col-sm-3 col-form-label text-right">@Localizer["申请原因"]</label>
								<div class="col-sm-8">
									@Model.Message
								</div>
							</div>
							<div class="form-group row">
								<label for="example-number-input" class="col-sm-3 col-form-label text-right">@Localizer["申请时间"]</label>
								<div class="col-sm-8">
									@Model.Dtime
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">状态</label>
								<div class="col-sm-8">
									@switch (Model.Status)
									{
										case 0:
											@Localizer["待审核"];
											break;
										case 1:
											@Localizer["已审核"];
											break;
										case 2:
											@Localizer["缺课"];
											break;
										case 3:
											@Localizer["已拒绝"];
											break;
										case -1:
											@Localizer["删除"];
											break;
										default:
											@Localizer["异常"];
											break;
									}
								</div>
							</div>
						</div>
					</div>
				</div><!--end card-body-->
			</div><!--end card-->
		</div><!--end col-->
	</div><!--end row-->
</form>


@section Scripts{
	<!-- Required datatable js -->
	<script type="text/javascript" src="@Url.Content("/assets/js/jquery.easyui.min.js")"></script>
	<script type="text/javascript" src="@Url.Content("/assets/plugins/datapicker/bootstrap-datetimepicker.min.js")"></script>
	<script src="@Url.Content("/assets/plugins/switchery/switchery.js")"></script>
	
	<script type="text/javascript">
		@Html.Raw(ViewBag.ScriptStr)

		$(document).ready(function () {
			$('.datetimepicker').datetimepicker({
				//language: 'zh-CN',//显示中文
				forceParse: true,
				format: 'yyyy-mm-dd hh:ii:ss',//显示格式
				initialDate: new Date().Format("yyyy-MM-dd hh:mm:ss"),
				autoclose: true,//选中自动关闭
				todayBtn: true,//显示今日按钮*/
				minuteStep: 1
			});
		});
	</script>
}
