@using WeTalk.Web.ViewModels.News;
@using Microsoft.AspNetCore.Mvc.Localization
@using WeTalk.Interfaces
@inject IHtmlLocalizer<LangResource> Localizer
@model NoticeAdd
@section HeadCss{
	<link href="/assets/css/plugins/datapicker/bootstrap-datetimepicker.css" rel="stylesheet" />
	<link href="@Url.Content("/assets/css/plugins/switchery/switchery.css")" rel="Stylesheet" type="text/css" />

}
<form asp-action="NoticeAdd" enctype="multipart/form-data">
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["发送者"]</label>
								<div class="col-sm-8">
                                   @Model.SendName
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["发送者"]ID</label>
								<div class="col-sm-8">
									<input asp-for="SendUserid" class="form-control" required type="text">
                                    <span class="help-block m-b-none"><i class="fa fa-info-circle"></i>@Localizer["注意:填0表示系统消息"]</span>
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["发送时间"]</label>
								<div class="col-sm-8">
									<input asp-for="Sendtime" type="datetime" class="form-control datetimepicker" asp-format="{0:yyyy-MM-dd HH:mm:ss}" placeholder="@Localizer["发布时间"]" />
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["发送方状态"]</label>
								<div class="col-sm-8">
									<select asp-for="SendStatus" class="form-control">
										<option value="1">@Localizer["启用"]</option>
										<option value="-1">@Localizer["删除"]</option>
									</select>
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["接收者"]</label>
								<div class="col-sm-8">
                                   @Model.AccName
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["接收者"]ID</label>
								<div class="col-sm-8">
									<input asp-for="AccUserid" class="form-control" required type="text">
                                    <span class="help-block m-b-none"><i class="fa fa-info-circle"></i>@Localizer["注意:填0表示系统消息"]</span>
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["接收时间"]</label>
								<div class="col-sm-8">
									@Model.Acctime
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["接收方状态"]</label>
								<div class="col-sm-8">
									<select asp-for="AccStatus" class="form-control">
										<option value="1">@Localizer["启用"]</option>
										<option value="-1">@Localizer["删除"]</option>
									</select>
								</div>
							</div>
							<div class="form-group row">
								<label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["短消息内容"]</label>
								<div class="col-sm-8">
									<textarea asp-for="Message" class="form-control" rows="5"></textarea>
								</div>
                            </div>
							<div class="row">
								<div class="col-sm-8 ml-auto">
									<input asp-for="Messageid" type="hidden" />
									<button type="submit" class="btn btn-primary dictionaryadd dictionaryedit" id="btn_save">@Localizer["保存信息"]</button>
								</div>
							</div>
						</div>

					</div>
				</div><!--end card-body-->
			</div><!--end card-->
		</div><!--end col-->
	</div><!--end row-->
	<div id="win1"></div>
</form>

@section Scripts{
	<!-- Required datatable js -->
	<script type="text/javascript" src="@Url.Content("/assets/js/jquery.easyui.min.js")"></script>
	<script type="text/javascript" src="@Url.Content("/assets/plugins/datapicker/bootstrap-datetimepicker.min.js")"></script>
	<script src="@Url.Content("/assets/plugins/switchery/switchery.js")"></script>
	
	<script type="text/javascript">
		@Html.Raw(ViewBag.ScriptStr)

		var switchery = new Switchery($(".js-switch")[0], {
			color: '#1AB394'
		});
		
		$(document).ready(function () {
			$('.datetimepicker').datetimepicker({
				//language: 'zh-CN',//显示中文
				forceParse: true,
				format: 'yyyy-mm-dd hh:ii:ss',//显示格式
				initialDate: new Date().Format("yyyy-MM-dd hh:mm:ss"),
				autoclose: true,//选中自动关闭
				todayBtn: true,//显示今日按钮*/
				minuteStep: 1
			});
		});
	</script>
}
