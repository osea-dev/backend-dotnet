@using WeTalk.Web.ViewModels.System;
@using Microsoft.AspNetCore.Mvc.Localization
@using WeTalk.Interfaces
@inject IHtmlLocalizer<LangResource> Localizer
@model Config
@section HeadCss{
    <link href="@Url.Content("/assets/css/plugins/switchery/switchery.css")" rel="Stylesheet" type="text/css" />
    }
    <form id="form1" asp-action="Config">
        <div class="row" style="padding-top:10px;">
            <div class="col-lg-12">
                <div class="card">
                    @await Component.InvokeAsync("LanguageTag", new { lang = Model.Lang })
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group row" style="display:none;">
                                    <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["前台是否关闭"]</label>
                                    <div class="col-sm-8">
                                        <input asp-for="IsClose" type="checkbox" class="js-switch i-checks" />
                                        <span class="help-block m-b-none"><i class="fa fa-info-circle"></i>@Localizer["网站维护期间，可以关闭网站"]</span>
                                    </div>
                                </div>
                            <div class="form-group row" style="display:none;">
                                    <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["关闭提示信息"]：</label>
                                    <div class="col-sm-8">
                                        <textarea asp-for="CloseTips" class="textinput" style="width:700px;height:94px"></textarea>
                                        <span class="help-block m-b-none"><i class="fa fa-info-circle"></i>@Localizer["网站关闭时，提示的信息"]</span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["公司名称"]<i class="mdi mdi-google-translate"></i>：</label>
                                    <div class="col-sm-8">
                                        <input asp-for="SiteName" type="text" class="form-control easyui-validatebox" data-options="required:true" placeholder="@Localizer["公司名称"]" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["网站地址"]：</label>
                                    <div class="col-sm-8">
                                        <input asp-for="SiteUrl" type="text" class="form-control" />
                                        <span class="help-block m-b-none"><i class="fa fa-info-circle"></i>@Localizer["网站的访问地址(尾部请不要加“/”)"]</span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["网页Title"]<i class="mdi mdi-google-translate"></i>：</label>
                                    <div class="col-sm-8">
                                        <input asp-for="SiteTitle" type="text" class="form-control" placeholder="@Localizer["请输入网站Meta里的Title"]" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["网站关键字"]<i class="mdi mdi-google-translate"></i>：</label>
                                    <div class="col-sm-8">
                                        <input asp-for="SiteKeyWords" type="text" class="form-control" placeholder="@Localizer["请输入网站Meta里的keywords"]" />
                                        <span class="help-block m-b-none"><i class="fa fa-info-circle"></i>@Localizer["网站Meta里的关键字"]</span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["网站Description"]<i class="mdi mdi-google-translate"></i>：</label>
                                    <div class="col-sm-8">
                                        <textarea asp-for="SiteDescription" class="form-control" placeholder="@Localizer["请输入网站Meta里的Description"]"></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["上传类型"]：</label>
                                    <div class="col-sm-8">
                                        <input asp-for="UpFileType" type="text" class="form-control" />
                                        <span class="help-block m-b-none"><i class="fa fa-info-circle"></i>@Localizer["设置文件上传类型,请用半角逗号“,”隔开"]</span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["文件大小"]：</label>
                                    <div class="col-sm-8">
                                        <input asp-for="UpFileSize" type="number" step="1" class="form-control easyui-validatebox" data-options="min:0,precision:0,required:true" />
                                        <span class="help-block m-b-none"><i class="fa fa-info-circle"></i>@Localizer["设置文件上传文件大小的限制,M(注:单位是M. 0表示不能上传文件)"]</span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["发送邮箱名称"]：</label>
                                    <div class="col-sm-8">
                                        <input asp-for="Sendname" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["发送邮件smtp服务器"]：</label>
                                    <div class="col-sm-8">
                                        <input asp-for="MailService" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["发送邮箱地址"]：</label>
                                    <div class="col-sm-8">
                                        <input asp-for="SendMail" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["发送邮箱密码"]：</label>
                                    <div class="col-sm-8">
                                        <input asp-for="SendPwd" type="password" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group" style="display:none;">
                                <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["网站底部信息"]<i class="mdi mdi-google-translate"></i>：</label>
                                    <div class="col-sm-8">
                                        <textarea asp-for="Fooder" class="form-control" style="width:70%;height:94px;"></textarea>
                                    </div>
                                </div>
                                <div class="form-group row" style="display:none;">
                                    <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["网站版权信息"]：</label>
                                    <div class="col-sm-8">
                                        <textarea asp-for="SiteCopyRight" class="form-control" style="width:70%;height:94px;"></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["ICP备案号"]：</label>
                                    <div class="col-sm-8">
                                        <input asp-for="ICP" type="text" class="form-control" />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-8 ml-auto">
                                        <input asp-for="Lang" type="hidden" class="form-control" />
                                        <button type="submit" class="btn btn-primary ">@Localizer["保存信息"]</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- Switchery -->
    <script src="~/assets/plugins/switchery/switchery.js"></script>

    <script>
        var elem = document.getElementById('IsClose');
        var switchery = new Switchery(elem, {
            color: '#1AB394'
        });
		@Html.Raw(ViewBag.ScriptStr)
    </script>
   
