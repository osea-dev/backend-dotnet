@using WeTalk.Web.ViewModels.System;
@using Microsoft.AspNetCore.Mvc.Localization
@using WeTalk.Interfaces
@inject IHtmlLocalizer<LangResource> Localizer
@model IP
@section HeadCss{
    <link href="@Url.Content("/assets/css/icon.css")" rel="stylesheet" />
}


<form asp-action="IP">
    <div class="row" style="padding-top:10px;">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label text-right">IP @Localizer["白名单"]<br></>(@Localizer["优于黑名单"]")</label>
                                <div class="col-sm-8">
									<textarea asp-for="WhileIp" rows="5" class="form-control" ></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label text-right">IP @Localizer["黑名单"]</label>
                                <div class="col-sm-8">
                                    <textarea asp-for="BlackIp" rows="5" class="form-control"></textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-8 ml-auto">
                                    <button type="submit" class="btn btn-primary">@Localizer["保存信息"]</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div><!--end card-body-->
            </div><!--end card-->
        </div><!--end col-->
    </div><!--end row-->
</form>

@section Scripts{
<script>
	@Html.Raw(ViewBag.ScriptStr)
</script>
}
