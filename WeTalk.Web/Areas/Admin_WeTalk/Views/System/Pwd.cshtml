@using WeTalk.Web.ViewModels.System;
@using Microsoft.AspNetCore.Mvc.Localization
@using WeTalk.Interfaces
@inject IHtmlLocalizer<LangResource> Localizer
@model MasterAdd
@section HeadCss{

}


<form asp-action="Pwd">
    <div class="row" style="padding-top:10px;">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["用户名"]</label>
                                <div class="col-sm-8">
                                    @Model.Username
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["原密码"]</label>
                                <div class="col-sm-8">
                                    <input asp-for="Userpwd" autocomplete="off" class="form-control" required type="password">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["新密码"]</label>
                                <div class="col-sm-8">
                                    <input asp-for="Userpwd1" class="form-control" type="password">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["重复新密码"]</label>
                                <div class="col-sm-8">
                                    <input asp-for="Userpwd2" class="form-control" type="password">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["真实姓名"]</label>
                                <div class="col-sm-8">
                                    <input asp-for="Name" class="form-control" type="tel">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label text-right">@Localizer["手机号码"]</label>
                                <div class="col-sm-8">
                                    <input asp-for="Mobile" class="form-control" required type="tel">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label text-right">Email</label>
                                <div class="col-sm-8">
                                    <input asp-for="Email" class="form-control" type="email">
                                </div>
                            </div>
                            <div class="row">
								<div class="col-sm-8 ml-auto">
									<input asp-for="AdminMasterid" type="hidden" />
									<button type="submit" class="btn btn-primary add edit">@Localizer["保存信息"]</button>
								</div>
                            </div>
                        </div>

                    </div>
                </div><!--end card-body-->
            </div><!--end card-->
        </div><!--end col-->
    </div><!--end row-->
</form>

@section Scripts{
    <!-- Required datatable js -->
    <script>
		@Html.Raw(ViewBag.ScriptStr)
    </script>
}
